@model MemberViewModel

<div class="container-fluid p-2 ">
    <div class="row">
        <div class="col-lg-6 col-sm-12 bg-primary text-white rounded">
            <div class="col-lg-4">
                @if(User.Identity.IsAuthenticated)
                {
                <img class="img-thumbnail rounded-circle" src="~/ottoman.png" alt="@Model.Name Profile Resmi" />
                    
                }
            </div>
            <div class="col-lg-6 text-dark">
                <input type="hidden" asp-for="Id" />
                @Model.Id <br />
                @Model.Name   <hr />
                @Model.Email  <hr />
                @Model.PhoneNumber <hr />


                <a class="btn btn-danger" asp-controller="Member" asp-action="Edit" asp-route-userId="@Model.Id">Şifremi Değiştir</a>

            </div>
        </div>
        <div class="col-lg-6 col-sm-12 bg-success text-dark">
            <div class="col-lg-6">

                <img class="img-thumbnail" src="~/ottoman.png" alt="@Model.Name Profile Resmi" />
            </div>
            <div class="col-lg-6 text-dark">
                @Model.Name
                <hr />

                @Model.Email

            </div>
        </div>

    </div>
</div>