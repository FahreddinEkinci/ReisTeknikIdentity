@{
    ViewData["Title"] = "SignUp";

    string successMessage = TempData["success"] as string;
}
@model SignUpViewModel
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert">
        <p class="m-3 alert alert-success"> @successMessage</p>
    </div>
}
<section class="py-5">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Kayıt Ol</p>
                <h2 class="fw-bold">Hoş Geldiniz</h2>
            </div>
        </div>


        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-body text-center d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle bs-icon-primary shadow bs-icon my-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                            </svg>
                        </div>
                        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
                        <form method="post" asp-controller="Home" asp-action="SignUp" enctype="multipart/form-data">


                            <div class="mb-3">
                                <!-- <label class="form-label" asp-for="UserName"></label> -->
                                <input class="form-control" type="text" asp-for="UserName" placeholder="Kullanıcı Adı" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="email" asp-for="Email" placeholder="E Posta">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="tel" asp-for="PhoneNumber" placeholder="Telefon Numarası">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>

                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="password" asp-for="Password" placeholder="Şifre">
                                <span class="text-danger" asp-validation-for="Password"></span>

                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="password" asp-for="PasswordConfirm" placeholder="Şifre Tekrar">
                                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                            </div>

                            <div class="mb-3">
                                <input type="file" asp-for="ProfileImage" class="form-control"  />
                                <span class="text-danger" asp-validation-for="ProfileImage"></span>

                            </div>
                            <div class="mb-3">
                                <input class="btn btn-primary shadow d-block w-100" type="submit" value="Kayıt Ol" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End: SingUp -->

@section scripts{

@await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")

}

